{
  "name": "custom-block-development-snippets",
  "displayName": "Gutenberg development snippets",
  "description": "Snippets for working with WordPress and Gutenberg",
  "publisher": "ryan-welcher",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.49.0"
  },
  "scripts": {
    "generate": "npm run generate:snippets && npm run generate:readme",
    "generate:snippets": "node ./src/generate-snippets.js",
    "generate:readme": "node ./src/generate-readme.js",
    "lint:js": "eslint --ext .js src"
  },
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/data.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/components.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/block-editor.json"
      },
      {
        "language": "php",
        "path": "./snippets/php.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/structure.json"
      },
      {
        "language": "json",
        "path": "./snippets/json.json"
      }
    ]
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^9.1.2",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3"
  }
}
